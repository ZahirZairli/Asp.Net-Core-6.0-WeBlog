@model List<RoleAssignViewModel>
    @{
        ViewData["Title"] = "AssignRole";
        ViewData["Cotroller"] = "AdminRole";
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayyout.cshtml";
    }
    <form method ="post">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input asp-for="@Model[i].Name" type="hidden" />
                <input asp-for="@Model[i].Exists" type="checkbox" class="form-check-input" />
                <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
            </div>
        }
        <br />
        <button class="btn btn-outline btn-danger">Yadda saxla</button>
        <a href="/Admin/AdminRole/UserRoleList" class="btn btn-outline btn-warning">İstifadəçilərin siyahısı</a>
    </form>
