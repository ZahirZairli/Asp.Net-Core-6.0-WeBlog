@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogList";
    ViewData["Cotroller"] = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayyout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-3">
        <div class="ibox">
            <div class="ibox-content product-box">
                <div class="product-imitation">
                    <img style="width: 100%;height: 30vh;" src="~/Web/images/@item.BlogImage"/>
                </div>
                <div class="product-desc">
                    <span class="product-price">
                        @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))
                    </span>
                        <small class="text-muted">@item.Category.CategoryName</small>
                        <a href="/Blog/BlogDetail/@item.BlogId" class="product-name">@item.BlogTitle</a>
                    <div class="small m-t-xs">
                        <p>
                                @if (item.BlogContent.Length > 60)
                                {
                                    @item.BlogContent.Substring(0,item.BlogContent.Substring(0,60).LastIndexOf(" "))
                                }
                                else
                                {
                                    @item.BlogContent
                                }
                                ....
                        </p>
                    </div>
                    <div class="m-t text-righ">
                            <a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-xs btn-outline btn-primary">Ətraflı <i class="fa fa-long-arrow-right"></i> </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>


