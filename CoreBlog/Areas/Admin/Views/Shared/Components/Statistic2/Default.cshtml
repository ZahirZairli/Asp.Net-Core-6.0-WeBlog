<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Dashboard</h1>

                <h3 class="font-bold no-margins">
                    Asp.Net Core
                </h3>
                <small>Layihəmizin bu hissəsində admin prosessləri Area üzərindən həyata keçirilir.</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Son bloq</h1>

                <h3 class="font-bold no-margins">
                    <i class="fa fa-eye fa-1x"></i>&nbsp;&nbsp; @ViewBag.blogview
                </h3>
                <a href="~/Blog/BlogDetail/@ViewBag.blogid">
                <small>@ViewBag.blogtitle</small></a>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart2"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget yellw-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">$ 50,992</h1>

                <h3 class="font-bold no-margins">
                    Sayt Qazancı
                </h3>
                <small>Reklamlar,Kontraktlar,Məhsul tanıtımları,Promosyonlar</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart3"></div>
            </div>
        </div>
    </div>
</div>
