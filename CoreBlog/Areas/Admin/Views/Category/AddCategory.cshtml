@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "Yeni kateqoriya";
    ViewData["Cotroller"] = "Kateqoriya";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayyout.cshtml";
}

<h4>Yeni kateqoriya</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("AddCategory", "Category", new { area = "Admin" }, FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Kateqoriya adı")
                @Html.TextBoxFor(x=>x.CategoryName,"",new {@class = "form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryName,"",new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.Label("Kateqoriya təsviri")
                @Html.TextAreaFor(x=>x.CategoryDescription,5,4,new {@class = "form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryDescription,"",new {@class = "text-danger"})
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Əlavə et</button>
            </div>
        }
    </div>
</div>
<a href="javascript:history.back()">Geri qayıt</a>


