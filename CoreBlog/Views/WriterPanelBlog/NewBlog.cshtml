@model PresentationLayer.Models.AddBlogImage

@{
    ViewData["Title"] = "NewBlog";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni bloq</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="NewBlog" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Başlıq</label>
                <input asp-for="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bloq mətni</label>
                <input asp-for="BlogContent" class="form-control" />
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BlogStatus" /> Status(Seçilərsə saytda avtomatik paylaşılacaq)
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Kateqoriya</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>) ViewBag.dpr, new { @class = "form-control" })
            </div>


            <div class="mb-3">
                <label for="formFile" class="form-label">Thumbnail</label>
                <input name="BlogThumbnailImage" class="form-control" type="file" id="formFile">
            </div>

            <div class="mb-3">
                <label for="formFile1" class="form-label">Şəkil</label>
                <input name="BlogImage" class="form-control" type="file" id="formFile1">
            </div>
            <br />
            <hr />
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
                <a style="float: right;" class="btn btn-info" asp-action="MyBlogs">Geri qayıt</a>
            </div>

        </form>
    </div>
</div>