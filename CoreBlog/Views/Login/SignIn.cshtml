@model UserSignInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@if (TempData["loginmessage"] != null)
{
	<script type="text/javascript">
		window.onload = function () {
			swal("Xəta",'Zəhmət olmasa məlumatların düzgünlüyünü yoxlayın', "error");
		};
	</script>
}
@if (TempData["message"] != null)
{
	<script type="text/javascript">
		window.onload = function () {
			swal("Xəta", 'Hesabınıza giriş bir 5 dəqiqəlik bağlandı.Zəhmət olmasa 5 dəqiqədən sonra yenidən cəhd edin.', "error");
		};
	</script>
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<h3 class="tittle">Hesabınızıa daxil olun</h3>
<div class="row inner-sec">
	<div class="login p-5 bg-light mx-auto mw-100">
		<form action="#" method="post">
			<div class="form-group">
				<label for="exampleInputEmail1 mb-2">İstifadəçi adı</label>
				<input type="text" class="form-control" name="username" id="exampleInputEmail1" required>
				@Html.ValidationMessageFor(x => x.username, "", new { @class = "text-danger" })
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1 mb-2">Şifrə</label>
				<input type="password" class="form-control" name="password" id="exampleInputPassword1" required>
				@Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
			</div>
			<div class="form-check mb-2">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" required>
				<label id="btn1" class="form-check-label" for="exampleCheck1">Qaydalarla tanış oldum</label>
			</div>
			<button type="submit" class="btn btn-primary submit mb-4">Daxil ol</button>
			<p><a href="/Register/SignUp">Hesabınız yoxdur?</a></p>
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		</form>
	</div>
</div>
<script>
	$("#btn1").click(function () {
		swal({
			position: "top-right",
			title: "Qaydalar >>",
			text: "Qeyd etdiyiniz maile yeni bloglarımız haqqında məlumalar göndəriləcəkdir!",
			icon: "info",
		});
	})
</script>
