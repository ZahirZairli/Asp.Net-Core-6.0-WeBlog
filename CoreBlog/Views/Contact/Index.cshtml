@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@if (TempData["contactmessage"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal("Göndərildi!", 'Mesajınız uğurla göndərildi', "success");
        };
    </script>
}


<link href="~/Web/css/contact.css" rel='stylesheet' type='text/css' />
<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
      rel="stylesheet">
<h3 class="tittle">Əlaqə</h3>
<p class="sub text-center">Fikirləriniz haqqında müzakirə etməyi sevirik</p>
<div class="contact-map inner-sec">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3038.604798158789!2d49.790425350488874!3d40.39545076475688!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40308768c13497eb%3A0x14cd184dbf935954!2sYeni%20Yasamal%202%2C%20Bak%C4%B1%2C%20Azerbaijan!5e0!3m2!1sen!2s!4v1676233234137!5m2!1sen!2s"
    style="border:0;" allowfullscreen="" class="map"></iframe>
</div>
<div class="address row">
    <div class="col-lg-4 address-grid">
        <div class="row address-info">
            <div class="col-md-4 address-left text-center">
                <i class="far fa-map"></i>
            </div>
            <div class="col-md-8 address-right text-left">
                <h6>Adres</h6>
                <p>
                    Bakı,Azərbaycan
                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 address-grid">
        <div class="row address-info">
            <div class="col-md-4 address-left text-center">
                <i class="far fa-envelope"></i>
            </div>
            <div class="col-md-8 address-right text-left">
                <h6>Mail</h6>
                <p>
                    <a href="mailto:zairli.zahir@gmail.com"> zairli.zahir@gmail.com</a>

                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 address-grid">
        <div class="row address-info">
            <div class="col-md-4 address-left text-center">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <div class="col-md-8 address-right text-left">
                <h6>Telefon</h6>
                <p>+994 51 355 10 06</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="contact_grid_right">
        <form action="/Contact/Index" method="post">
            <div class="row contact_left_grid">
                <div class="col-md-6 con-left">
                    <div class="form-group">
                        <label for="validationCustom01 my-2">Ad,soyad</label>
                        <input class="form-control" type="text" name="ContactUserName" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Mail</label>
                        <input class="form-control" type="email" name="ContactMail" required>
                    </div>
                    <div class="form-group">
                        <label for="validationCustom03 my-2">Mövzu</label>
                        <input class="form-control" type="text" name="ContactSubject" required>
                    </div>
                </div>
                <div class="col-md-6 con-right">
                    <div class="form-group">
                        <label for="textarea">Mesaj</label>
                        <textarea id="textarea" name="ContactMessage"></textarea>
                    </div>
                    <input class="form-control" type="submit" value="Göndər">
                </div>
            </div>
        </form>
    </div>
</div>

