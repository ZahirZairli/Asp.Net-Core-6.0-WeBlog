<div class="comment-top">
    <h4>Bir yorum yaz</h4>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="comment-bottom">
        <form action="/Comment/AddComment" method="post">
            <input class="form-control" type="text" name="BlogId" placeholder="Tam Ad" required value="@Model.BlogId" readonly hidden>
            <input class="form-control" type="text" name="CommentUserName" placeholder="Tam Ad" required>
            <input class="form-control" type="text" name="CommentTitle" placeholder="Mövzu" required>
            <textarea class="form-control" name="CommentContent" placeholder="Yorum..." required></textarea>
            <button type="submit" class="btn btn-primary submit">Göndər</button>
        </form>
    </div>
    }
    else
    {
        <a href="/Login/SignIn">Yorum yazmaq üçün hesabınıza daxil olun</a>
    }

</div>
